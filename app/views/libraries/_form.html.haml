= form_for(@library, :html => { :class => "form-horizontal"}) do |f|
  -if @library.errors.any?
    #error_explanation
      %h2= "#{pluralize(@library.errors.count, "error")} prohibited this library from being saved:"
      %ul
        - @library.errors.full_messages.each do |msg|
          %li= msg

  .fieldset
    .legend
    .control-group
      %label.control-label{:for => 'library_github_repo'}
        github.com/codeforamerica/
      .controls
        = f.text_field :github_repo, :class => 'input-large'
        %p.help-block
          Github Repo
    .control-group
      %label.control-label
        Language
      .controls
        = f.text_field :language_list, :class => 'input-large'
  .form-actions
    = f.submit 'Save', :class => 'btn btn-primary'
