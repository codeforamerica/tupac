source 'https://rubygems.org'

gem 'rails', '3.2.3'

gem 'haml-rails'
gem 'jquery-rails'
gem 'octokit'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

group :test, :development do
  gem 'factory_girl_rails'
  gem 'sqlite3'
  gem 'rspec-rails', '~> 2.6'
end

group :production do
  gem 'pg'
end

group :test do
  gem 'webmock'
end
